<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/color_icon_button_background_color"/>
            <corners android:bottomRightRadius="8dp" android:topRightRadius="8dp" android:topLeftRadius="24dp" android:bottomLeftRadius="24dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/color_icon_button_background_color_variant1"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</selector>