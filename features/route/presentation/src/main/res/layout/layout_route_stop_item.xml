<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_recycler_view_item">

    <ImageView
        android:id="@+id/drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_drag_handle"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/route_stop_name"
        android:layout_width="0dp"
        android:maxWidth="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/drag_handle"
        style="@style/text_view_style"
        android:text="placeholder_stop_name"
        android:maxLines="2"
        android:textSize="16sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/route_stop_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/text_view_style"
        android:text="placeholder_stop_distance"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/route_stop_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/route_stop_distance"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/text_view_style"
        android:text="placeholder_stop_time"
        android:textSize="12sp"
        android:gravity="end"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>